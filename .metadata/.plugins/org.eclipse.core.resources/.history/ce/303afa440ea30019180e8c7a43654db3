@charset "UTF-8";

body{
            font-size:8px;/*设置统一的字号*/
            width:280px;/*设置网页宽度*/
            margin:5px;/*让body和边框保持距离*/
         }
         /*通过.定位时class为me的元素*/
         .me{
            font-size:20px;/*设置字号*/
         }
         .middle{
            padding-left:70px;/*与左边距保持距离*/
         }
        
        
          .note{
            text-indent:20px;/*首行缩进*/
            padding-top:15px;/*与上边距保持距离*/
            padding-bottom:15px;/*与下边距保持距离*/
          }
